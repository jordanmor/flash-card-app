extends app

block card
  section.flashcards
    .card(class=`card-${side}`)
      .card-header
      h1.card-title= side
      #content
        h2= text
        if hint
          p(class='card-hint')
            i #{hint}
      .card-buttons
        .card-flip-wrap
          a(href=`${id}?side=${cardOtherSide}`)
        .card-next
          a(href='/cards')
            img(src='/static/img/next.svg')
  script(src='/static/js/app.js')
